<div class="container-fluid page-title">
  <p class="page-title-text">レビューを書くホテルを検索</p><!--title-->
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-12">
          <div class="bs-docs-section">

            <!--検索フォーム-->
            <h3 class="text-middle">検索</h3>
            <%= form_tag('/buildings/search1', method: :get) do %>
              <div class="form-group">
                <input class="form-control" name="keyword" placeholder="ホテル名を入力" type="text" value=""><br>
                <button class="btn btn-primary" building_name="検索" type="submit">検索</button></input>
              </div>
            <% end %>

          </div>
          <div class="bs-docs-section">
            
            <!--検索結果を表示-->
            <h3 class="text-middle">検索結果</h3>
            <% @buildings.each do |building| %>
              <div class="media">
                <div class="media-left">
                  <a href="#">
                    <img class="media-object" src="<%= building.image_url %>" alt="...">
                  </a>
                </div>
                <div class="media-body">
                  <h4 class="media-heading"><a href="/buildings/<%= building.id %>/reviews/new"><%= building.building_name %></a></h4>
                  <%= building.detail %></br>
                  投稿: <%= building.review_count %>件
                  <% if building.reviews.present? %>
                    平均評価: <%= building.review_rate_average %>
                  <% else %>
                    平均評価: -
                  <% end %>
                </div>
              </div>
            <% end %>
            <%= paginate(@buildings) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>