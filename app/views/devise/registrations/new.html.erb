<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <h1 class="text-muted">新規登録ページ</h1> <!--title-->
  </div>
</nav>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="row">
        <div class="col-xs-12">
          <div class="bs-docs-section">

            <!--フォーム-->
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <!--メールアドレス入力欄-->
              <div class="form-group">
                <%= f.label :email, 'メールアドレス(必須)', class: "control-label" %>
                <%= f.email_field :email, autofocus: true, :placeholder => 'メールアドレスを入力', class: "form-control" %>
              </div>

              <!--パスワード入力欄-->
              <div class="form-group">
                <%= f.label :password, 'パスワード(必須・8文字以上)', class: "control-label" %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
                <%= f.password_field :password, autocomplete: "off", :placeholder => 'パスワードを入力', class: "form-control" %>
              </div>

              <!--パスワード確認入力欄-->
              <div class="form-group">
                <%= f.label :password_confirmation, 'パスワード確認(必須)', class: "control-label" %>
                <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'パスワードを入力（確認）', class: "form-control" %>
              </div>

              <!--ニックネーム入力欄-->
              <div class="form-group">
                <%= f.label :nickname, 'ニックネーム(必須)', class: "control-label" %>
                <%= f.text_field :nickname, placeholder: 'ニックネームを入力', class: "form-control" %>
              </div>

              <!--新規登録ボタン-->
              <div class="form-group">
                <%= button_tag type: "submit", class: "btn btn--primary" do %>新規登録<% end %>
              </div>

              <!--既にアカウントをお持ちの場合-->
              <div class="form-group">
                <strong>既にアカウントをお持ちの方は、<a href="/users/sign_in">こちら</a></strong>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>