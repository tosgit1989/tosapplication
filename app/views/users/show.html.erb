<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <h1 class="text-muted"><%= current_user.nickname %><span>さんのマイページ</span></h1><!--title-->
  </div>
</nav>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="row">

        <!--自分の基本情報を表示-->
        <div class="col-md-6">
          <div class="bs-docs-section">
            <h3 class="text-middle">基本情報</h3>
            <h4>ニックネーム  : <%= current_user.nickname %></h4>
            <h4>メールアドレス: <%= current_user.email %></h4>
          </div>
        </div>

        <!--自分の投稿したものを表示-->
        <div class="col-md-6">
          <div class="bs-docs-section">
            <h3 class="text-middle"><%= current_user.nickname %>さんの投稿一覧</h3>
            <% current_user.reviews.each do |review| %>
              <div class="media">
                <div class="media-left">
                  <a href="#">
                    <img class="media-object" src="<%= review.building.image_url %>" alt="...">
                  </a>
                </div>
                <div class="media-body">
                  <h4 class="media-heading"><a href="/buildings/<%= review.building_id %>"><%= review.building.building_name %></a></h4>
                  <%= review.review %></br>
                  評価: <%= review.rate %></br>
                  このレビューを <a href="/buildings/<%= review.building_id %>/reviews/<%= review.id %>/edit">編集</a> / <%= link_to '削除', "/buildings/#{review.building_id}/reviews/#{review.id}", method: :delete %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>